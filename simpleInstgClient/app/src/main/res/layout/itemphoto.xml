<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgPhoto"
        android:src="@drawable/ic_action_name2"
        android:scaleType="center"

        android:adjustViewBounds="true"
        android:layout_below="@+id/imgUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_caption_text"
        android:id="@+id/tvCaption"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@+id/imgLikes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defaule_username"
        android:id="@+id/tvUsername"
        android:textStyle="bold"
        android:textColor="#ff1124ff"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgUser"
        android:layout_toEndOf="@+id/imgUser"
        android:layout_alignBaseline="@+id/imgUser"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgUser"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imgLikes"
        android:layout_below="@+id/imgPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_action_heart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/likes_count"
        android:id="@+id/tvLikes"
        android:layout_above="@+id/tvCaption"
        android:gravity="left"
        android:layout_toRightOf="@id/imgLikes"
        />
</RelativeLayout>